{
  "compilerOptions": {
    "baseUrl": "./",
    "jsxImportSource": "react",
    "outDir": "dist",
    "target": "esnext",
    "include": ["**/*.js", "**/*.jsx", "**/*.json"],
    "exclude": ["node_modules", "**/node_modules", "dist"],
    "paths": {
      "@metronic/*": ["_metronic/*"],
      "@assets/*": ["styles/*"],
      "@static/*": ["public/assets/*"],
      "@/*": ["src/*"]
    }
  }
}
